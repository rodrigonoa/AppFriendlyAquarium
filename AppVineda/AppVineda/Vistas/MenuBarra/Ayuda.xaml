<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVineda.Vistas.MenuBarra.Ayuda"
             BackgroundColor="#58CEF5">
    <StackLayout Padding="20">
        <Frame BackgroundColor="Black">
            <Label Text="Bienvenido al panel de ayuda" TextColor="White" FontSize="40" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
        </Frame>
        <BoxView HeightRequest="30"/>
        <Button Text="seleccionar Razón" x:Name="btnopciones" Clicked="btnopciones_Clicked" TextColor="White" BackgroundColor="Red" CornerRadius="30" BorderColor="Black" BorderWidth="2" FontSize="17" FontAttributes="Bold"/>
        <BoxView HeightRequest="30"/>
        <Frame CornerRadius="30" BorderColor="Black" x:Name="frmCompletar" IsVisible="false" BackgroundColor="LightGray">
            <StackLayout>
                <Entry x:Name="txtOpcion" HeightRequest="200"/>
                <Button x:Name="btnEnviar" Clicked="btnEnviar_Clicked" Text="Enviar comentario" Margin="0,20,0,0" CornerRadius="30" BackgroundColor="Blue" TextColor="White" FontAttributes="Bold" FontSize="17"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>